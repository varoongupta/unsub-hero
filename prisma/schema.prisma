// ---------- datasource ----------
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ---------- generator ----------
generator client {
  provider = "prisma-client-js"
}

// ---------- models ----------
model User {
  id        String       @id @default(cuid())
  clerkId   String       @unique
  email     String       @unique
  tokens    GmailToken[]
  sub       Subscription?
  createdAt DateTime     @default(now())
}

model GmailToken {
  id           String   @id @default(cuid())
  userId       String
  accessToken  String
  refreshToken String
  expiryDate   DateTime
  scope        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id])
}

model Subscription {
  id               String   @id @default(cuid())
  userId           String   @unique
  status           String
  currentPeriodEnd DateTime?
  product          String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user             User     @relation(fields: [userId], references: [id])
}

model ActionLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  sender    String
  fromEmail String
  method    String?
  count     Int?
  createdAt DateTime @default(now())
}
